@model PPC.Models.PROPERTY
@using PPC.Models


@{
    DemoPPCRentalEntities db = new DemoPPCRentalEntities();

    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var im = db.PROPERTY.FirstOrDefault(m => m.ID == Model.ID);
    var fe = db.PROPERTY_FEATURE.ToList();



    string[] images = im.Images.Split(',');
}

<h2>Details</h2>

<div class="container">
    <div class="properties-listing spacer">
        <div class="row">
            @*<div class="col-lg-3 col-sm-4 hidden-xs">

                    <div class="advertisement">
                        <h4>Advertisements</h4>
                        <img src="../assets/images/advertisements.jpg" class="img-responsive" alt="website template image">
                    </div>
                </div>*@
            <div class="col-lg-9 col-sm-8" style="margin-top:50px;margin-left:20px">


                <div class="row" style="margin-top:100px">
                    <div class="col-lg-8">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                                <div class="active item" data-slide-number="1">
                                    <img src="~/Images/@im.Avatar">
                                </div>
                                @for (int i = 1; i < images.Count(); i++)
                                {
                                    <div class="item" data-slide-number="@(i+1)">
                                        <img src="~/Images/@images[i-1]">
                                    </div>
                                }


                            </div>

                            <!-- Controls -->

                            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">

                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">

                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-4">

                        <div class="col-lg-12  col-sm-6">
                            <div class="property-info">
                                <dl><dd><h2 style="color:#56C6EE">@Html.DisplayFor(model => model.PropertyName)</h2></dd></dl>
                                <dl class="h4"><dd><img src="~/Images/dollar-coin-money.png" />   @Html.DisplayFor(model => model.Price) &nbsp; @Html.DisplayFor(model => model.UnitPrice)</dd></dl>
                                <dl class="h4"><dd><img src="~/Images/chart-area.png" /> @Html.DisplayFor(model => model.Area)</dd></dl>

                                <dl class="h4"><dd> <img src="~/Images/location1.png" />@Html.DisplayFor(model => model.STREET.StreetName), @Html.DisplayFor(model => model.WARD.WardName), @Html.DisplayFor(model => model.DISTRICT.DistrictName)</dd></dl>
                                <dl class="h4"><dd><img src="~/Images/bed.png" />&nbsp; @Html.DisplayFor(model => model.BedRoom) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="~/Images/bathtub-with-opened-shower.png" />&nbsp;@Html.DisplayFor(model => model.BathRoom)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <img src="~/Images/parking.png" />&nbsp; @Html.DisplayFor(model => model.PackingPlace)</dd></dl>


                                <dl class="h4"><dd><img src="~/Images/account.png" /> @Html.DisplayFor(model => model.USER.FullName) - @Html.DisplayFor(model => model.USER.Phone)</dd></dl>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <br />
        <div class="spacer">
            <h4><b><span class=""></span> Properties Detail</b></h4>
            <dl>
                <dd><h5>@Html.DisplayTextFor(model => model.Content)</h5></dd>
            </dl>
            <h4><b><span class=""></span> Images</b></h4>
            @{string[] chuoi = @Model.Images.Split(',');

            }
            @for (int i = 0; i < chuoi.Count() - 1; i++)
            {
                <img src="~/Images/@chuoi[i]" width="100px" alt="@Model.Images" />
            }
        </div>
        <br />
        <div class="col-lg-12 col-sm-6">
            <div class="enquiry">
                <h4><b><span class="glyphicon glyphicon-envelope"></span> Post Enquiry</b></h4>
                <form action="#" method="post">
                    <br />
                    <input type="text" class="form-control" placeholder="Full Name">
                    <br />
                    <input type="text" class="form-control" placeholder="you@yourdomain.com">
                    <br />
                    <input type="text" class="form-control" placeholder="your number">
                    <textarea rows="6" class="form-control" placeholder="Whats on your mind?"></textarea>
                    <button type="submit" class="btn btn-primary" name="Submit">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
